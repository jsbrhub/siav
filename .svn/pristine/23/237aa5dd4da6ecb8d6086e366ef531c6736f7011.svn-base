<?php
class ArquivopoliticaBDBase {
    public $oConexao;
    public $msg;

    function __construct(Conexao $oConexao){
        try{
            $this->oConexao = $oConexao;
        } 
        catch (PDOException $e){
            $this->msg = $e->getMessage();
        }
    }
	
    function inserir($oArquivopolitica){
		$reg = ArquivopoliticaMAP::objToRs($oArquivopolitica);
		$aCampo = array_keys($reg);
		$sql = "
				insert into arquivopolitica(
					".implode(',', $aCampo)."
				)
				values(
					:".implode(", :", $aCampo).")";

		foreach($reg as $cv=>$vl)
			$regTemp[":$cv"] = ($vl=='') ? NULL : $vl;

		try{
			$this->oConexao->executePrepare($sql, $regTemp);
			if($this->oConexao->msg != ""){
				$this->msg = $this->oConexao->msg;
				return false;
			}
			return $this->oConexao->lastID();
		}
		catch(PDOException $e){
			$this->msg = $e->getMessage();
			return false;
		}
	}
	
	function alterar($oArquivopolitica){
    	$reg = ArquivopoliticaMAP::objToRs($oArquivopolitica);
        $sql = "
                update 
                    arquivopolitica 
                set
                    ";
        foreach($reg as $cv=>$vl){
            if($cv == "idArquivoPol") continue;
            $a[] = "$cv = :$cv";
        }
        $sql .= implode(",\n", $a);
        $sql .= "
                where
                    idArquivoPol = {$reg['idArquivoPol']}";

        foreach($reg as $cv=>$vl){
            if($cv == "idArquivoPol") continue;
            $regTemp[":$cv"] = ($vl=='') ? NULL : $vl;
        }
        try{
            $this->oConexao->executePrepare($sql, $regTemp);
            if($this->oConexao->msg != ""){
                $this->msg = $this->oConexao->msg;
                return false;
            }
            return true;
        }
        catch(PDOException $e){
            $this->msg = $e->getMessage();
            return false;
        }
	}
	
	function excluir($idArquivoPol){
        $sql = "
                delete from
                    arquivopolitica 
                where
                    idArquivoPol = $idArquivoPol";

        try{
            $this->oConexao->execute($sql);
            if($this->oConexao->msg != ""){
                $this->msg = $this->oConexao->msg;
                return false;
            }
            return true;
        }
        catch(PDOException $e){
            $this->msg = $e->getMessage();
            return false;
        }
	}
	
	function get($idArquivoPol){
        $sql = "
                select 
					".ArquivopoliticaMAP::dataToSelect()." 
                from
					arquivopolitica 
				left join politicaambiental 
					on (arquivopolitica.idPolitica = politicaambiental.idPolitica) 
                where
					arquivopolitica.idArquivoPol = $idArquivoPol";
        try{
            $this->oConexao->execute($sql);
            if($this->oConexao->numRows() != 0){
                $aReg = $this->oConexao->fetchReg();
                return ArquivopoliticaMAP::rsToObj($aReg);
            } else {
                $this->msg = "Nenhum registro encontrado!";
                return false;
            }
        }
        catch(PDOException $e){
            $this->msg = $e->getMessage();
            return false;
        }
	}
        
        function getRow($aFiltro = NULL, $aOrdenacao = NULL){
